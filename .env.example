# Salling Group API Configuration
# Get your API key from: https://developer.sallinggroup.com/
SALLING_GROUP_API_KEY=your_salling_group_api_key_here

# Google Maps API Key (for Geocoding, Places, and Distance Matrix APIs)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=./credentials/gmail_credentials.json
GMAIL_MONITORING_EMAIL=deals@yourapp.com

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# Redis Cache Configuration (optional, defaults to in-memory cache if not provided)
REDIS_URL=redis://localhost:6379

# Database Configuration
DATABASE_URL=sqlite:///campaigns.db

# Application Configuration
PORT=3000
MAX_STORE_DISTANCE_KM=20
CACHE_TTL_HOURS=24
