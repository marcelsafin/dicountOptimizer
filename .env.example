# =========================================================================
# API Keys (Required)
# =========================================================================

# Google API Key (for Gemini AI and Google Maps)
# Get your API key from: https://console.cloud.google.com/
GOOGLE_API_KEY=your_google_api_key_here

# Salling Group API Key (for discount data)
# Get your API key from: https://developer.sallinggroup.com/
# Optional for testing, required for production
SALLING_GROUP_API_KEY=your_salling_group_api_key_here

# Google Maps API Key (optional, falls back to GOOGLE_API_KEY)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# =========================================================================
# Environment Configuration
# =========================================================================

# Deployment environment: dev, staging, or production
ENVIRONMENT=dev

# Enable debug mode with verbose logging
DEBUG=false

# =========================================================================
# Agent Configuration
# =========================================================================

# Gemini model name for AI agents
AGENT_MODEL=gemini-2.0-flash-exp

# Temperature for agent responses (0.0 = deterministic, 2.0 = creative)
AGENT_TEMPERATURE=0.7

# Maximum output tokens per agent response
AGENT_MAX_TOKENS=2000

# Nucleus sampling parameter (0.0 to 1.0)
AGENT_TOP_P=0.95

# Top-k sampling parameter (1 to 100)
AGENT_TOP_K=40

# =========================================================================
# Performance Configuration
# =========================================================================

# Time-to-live for cached API responses (seconds)
CACHE_TTL_SECONDS=3600

# Timeout for external API calls (seconds)
API_TIMEOUT_SECONDS=30

# Maximum concurrent HTTP requests
MAX_CONCURRENT_REQUESTS=10

# Maximum retry attempts for failed API calls
MAX_RETRIES=3

# Minimum wait time between retries (seconds)
RETRY_MIN_WAIT_SECONDS=1.0

# Maximum wait time between retries (seconds)
RETRY_MAX_WAIT_SECONDS=10.0

# =========================================================================
# Cache Configuration (Redis)
# =========================================================================

# Cache backend type: memory (single instance) or redis (multi-instance)
CACHE_TYPE=memory

# Redis server hostname
REDIS_HOST=localhost

# Redis server port
REDIS_PORT=6379

# Redis database number (0-15)
REDIS_DB=0

# Redis password (leave empty for no authentication)
REDIS_PASSWORD=

# Maximum Redis connections in the pool
REDIS_MAX_CONNECTIONS=10

# Redis socket timeout in seconds
REDIS_SOCKET_TIMEOUT=5.0

# Redis connection timeout in seconds
REDIS_SOCKET_CONNECT_TIMEOUT=5.0

# Prefix for all Redis cache keys (namespace isolation)
REDIS_KEY_PREFIX=shopping_optimizer:

# =========================================================================
# Feature Flags
# =========================================================================

# Enable AI-powered meal suggestions using Gemini
ENABLE_AI_MEAL_SUGGESTIONS=true

# Enable caching of API responses
ENABLE_CACHING=true

# Enable metrics collection and monitoring
ENABLE_METRICS=true

# Enable structured JSON logging
ENABLE_STRUCTURED_LOGGING=true

# Enable distributed tracing with correlation IDs
ENABLE_DISTRIBUTED_TRACING=false

# Enable async/await for I/O operations
ENABLE_ASYNC_OPERATIONS=true

# Enable HTTP connection pooling
ENABLE_CONNECTION_POOLING=true

# =========================================================================
# Logging Configuration
# =========================================================================

# Logging level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log output format: json, console, or text
LOG_FORMAT=console

# Path to log file (leave empty for stdout only)
LOG_FILE=

# Maximum log file size before rotation (bytes)
LOG_MAX_BYTES=10485760

# Number of rotated log files to keep
LOG_BACKUP_COUNT=5

# =========================================================================
# Business Logic Configuration
# =========================================================================

# Default search radius for discount lookup (kilometers)
DEFAULT_SEARCH_RADIUS_KM=5.0

# Maximum number of stores in a shopping recommendation
MAX_STORES_PER_RECOMMENDATION=3

# Minimum discount percentage to consider
MIN_DISCOUNT_PERCENT=10.0

# Maximum travel distance for store recommendations (kilometers)
MAX_TRAVEL_DISTANCE_KM=20.0
